generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Shops {
  id          Int           @id @default(autoincrement())
  name        String
  message     String
  location    String
  code        String        @unique
  users       UserShops[]   // Updated relation
}

model Users {
  id        Int           @id @default(autoincrement())
  name      String
  email     String        @unique
  bdate     DateTime      @db.Date
  password  String
  shops     UserShops[]   // Updated relation
}

// New join table for many-to-many relationship
model UserShops {
  user      Users     @relation(fields: [userId], references: [id])
  userId    Int
  shop      Shops     @relation(fields: [shopCode], references: [code])
  shopCode  String
  joinedAt  DateTime  @default(now())

  @@id([userId, shopCode])
  @@index([shopCode])
}