generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Shops {
  clerkOrgId  String      @unique
  name        String
  message     String?
  location    String?
  code        String       @unique
  users       ShopSubscription[]
}

model Users {
  clerkId   String        @unique
  username      String
  email     String        @unique
  bdate     DateTime      @db.Date
  shops     ShopSubscription[]
}

// New join table for many-to-many relationship
model ShopSubscription {
  id        String   @id @default(cuid())
  userId    String
  shopId    String
  createdAt DateTime @default(now())

  user Users @relation(fields: [userId], references: [clerkId])
  shop Shops @relation(fields: [shopId], references: [clerkOrgId])

  @@unique([userId, shopId])
}