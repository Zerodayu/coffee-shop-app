generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Shops {
  id          Int       @id @default(autoincrement())
  name        String
  message     String
  location    String
  code        String    @unique
  users       Users[]   // Relation to Users
}

model Users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  bdate     DateTime @db.Date // Changed to store date only
  password  String
  shopCode  String   // Foreign key to Shops
  shop      Shops    @relation(fields: [shopCode], references: [code])

  @@index([shopCode])
}